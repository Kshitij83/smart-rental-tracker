# Smart Rental Tracker Environment Configuration

# Database Configuration
DATABASE_URL=sqlite:///./smart_rental_tracker.db

# Email Configuration - Choose either SMTP or EmailJS

# Option 1: SMTP Configuration (Gmail, Outlook, etc.)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SENDER_EMAIL=your-email@gmail.com
SENDER_NAME=Smart Rental Tracker

# Option 2: EmailJS Configuration (Alternative to SMTP)
EMAILJS_SERVICE_ID=your_service_id
EMAILJS_TEMPLATE_ID=your_template_id
EMAILJS_USER_ID=your_user_id

# Notification Settings
REMINDER_DAYS_BEFORE=7
OVERDUE_ALERT_HOURS=24

# ML Model Settings
ML_MODELS_DIR=./ml/models
ML_DATA_PATH=./database/data.csv

# Server Settings
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=smart_rental_tracker.log

# Security
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Background Task Settings
ENABLE_SCHEDULER=true
SCHEDULER_INTERVAL_MINUTES=60
